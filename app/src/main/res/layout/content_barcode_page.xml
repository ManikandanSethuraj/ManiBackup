<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_barcode_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rt7mobilereward.app.BarcodePage"
    tools:showIn="@layout/activity_barcode_page">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/rewards_card_front"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARD BALANCE"
        android:layout_marginTop="5dp"
        android:textSize="50px"
        android:gravity="center"

        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="90px"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:id="@+id/showcardbalance_barcode"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7.65"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="151dp"
            android:id="@+id/liner"
            android:layout_gravity="center"
            android:gravity="center|top"
            android:orientation="vertical"
            android:layout_weight="1265.87" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:text="DONE"
            android:textAlignment="center"
            android:id="@+id/done_barcode_btn"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"/>

    </LinearLayout>


</LinearLayout>
