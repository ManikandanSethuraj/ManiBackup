<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".SignUpCardAcceptancePage">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginTop="5dp"
     android:weightSum="4">
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/rewards_card_front_back"
         android:layout_gravity="center"
         android:layout_weight="2.5"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:layout_marginBottom="15dp"/>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/str_signup_cardacceptance_1"
         android:gravity="center"/>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/str_signup_cardacceptance_2"
         android:gravity="center"/>

 </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:orientation="vertical">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YES"
        android:id="@+id/btn_yes_card"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/welcomepage_btn_shape"
        android:onClick="ButtonOnClick"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NO"
        android:id="@+id/btn_no_card"
        android:layout_weight="1"
        android:onClick="ButtonOnClick"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/welcomepage_btn_shape"
        android:gravity="center"/>


</LinearLayout>
</LinearLayout>
