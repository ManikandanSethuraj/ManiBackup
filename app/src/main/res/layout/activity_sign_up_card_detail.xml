<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyText"
    android:orientation="vertical"
    tools:context="com.rt7mobilereward.app.SignUpCardDetail">



   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/rewards_card_back"
       android:background="@color/colorGreyText"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="10dp"/>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/colorGreyText"
       android:textColor="@color/colorWhite"
       android:textAlignment="center"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:maxLines="2"
       android:text="@string/str_sign_up_card_detail_info"
       android:textStyle="bold"
       android:gravity="bottom|center" />


   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="@color/colorWhite"
       android:layout_marginTop="15dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:id="@+id/cardnumber_detail_edit"/>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Submit"
       android:layout_marginTop="10dp"
       android:id="@+id/btn_check_card"
       android:background="@drawable/welcomepage_btn_shape"
       android:textColor="@color/colorWhite"
       android:layout_gravity="center_horizontal" />

</LinearLayout>
