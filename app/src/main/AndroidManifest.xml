<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rt7mobilereward.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomePage"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoTitle" />
        <activity
            android:name=".SignUpShortPage"
            android:label="SIGN UP"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginPage"
            android:label="SIGN IN"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpCardAcceptancePage"
            android:label="SIGN UP"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpCardDetail"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SignUpFullCusAccPage"
            android:label="@string/title_activity_sign_up_full_cus_acc_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>