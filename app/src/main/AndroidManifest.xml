<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rt7mobilereward.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true"
        >
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppThemeNoTitle"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomePage"
            android:theme="@style/AppThemeNoTitle"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SignUpShortPage"
            android:label="SIGN UP"

            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginPage"
            android:label="SIGN IN"

            android:screenOrientation="portrait"/>
        <activity
            android:name=".SignUpCardAcceptancePage"
            android:label="SIGN UP"
            android:screenOrientation="portrait"/>
        <activity android:name=".SignUpCardDetail"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SignUpFullCusAccPage"
            android:label="@string/title_activity_sign_up_full_cus_acc_page"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>